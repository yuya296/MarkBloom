{
  "name": "mark-bloom",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "lint": "eslint . && pnpm lint:styles && pnpm check:widget-measure",
    "lint:styles": "stylelint \"apps/webview-demo/src/**/*.scss\"",
    "check:widget-measure": "node scripts/check-widget-measure-contract.mjs",
    "lint:core": "pnpm -C apps/webview-demo lint",
    "typecheck": "pnpm -r typecheck",
    "check:compatibility": "node scripts/check-compatibility.mjs",
    "build:core": "pnpm -F webview-demo build",
    "build": "pnpm -r build",
    "test:e2e": "pnpm -C apps/webview-demo build && playwright test"
  },
  "pnpm": {
    "overrides": {
      "@codemirror/commands": "6.10.1",
      "@codemirror/lang-markdown": "6.5.0",
      "@codemirror/language": "6.12.1",
      "@codemirror/state": "6.5.3",
      "@codemirror/view": "6.39.8"
    }
  },
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "postcss-scss": "^4.0.9",
    "stylelint": "^16.25.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0"
  }
}
