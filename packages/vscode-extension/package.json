{
  "name": "markbloom",
  "version": "0.1.1",
  "publisher": "yuya296",
  "displayName": "MarkBloom",
  "description": "A Markdown-first viewer/editor for efficiently reviewing and editing large volumes of AI-generated documents.",
  "repository": {
    "type": "git",
    "url": "https://github.com/yuya296/MarkBloom"
  },
  "license": "MIT",
  "icon": "assets/logo.png",
  "categories": ["Other"],
  "keywords": ["markdown", "editor", "preview", "custom-editor"],
  "type": "commonjs",
  "main": "./dist/extension.js",
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onCustomEditor:markbloom.editor",
    "onCommand:markbloom.openInMarkBloom",
    "onCommand:markbloom.openSource",
    "onStartupFinished"
  ],
  "contributes": {
    "customEditors": [
      {
        "viewType": "markbloom.editor",
        "displayName": "MarkBloom Editor",
        "selector": [{ "filenamePattern": "*.md" }],
        "priority": "option"
      }
    ],
    "commands": [
      {
        "command": "markbloom.openInMarkBloom",
        "title": "Open in MarkBloom",
        "icon": "$(preview)"
      },
      {
        "command": "markbloom.openSource",
        "title": "Open Source",
        "icon": "$(file-code)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "markbloom.openSource",
          "when": "activeCustomEditorId == markbloom.editor",
          "group": "navigation"
        },
        {
          "command": "markbloom.openInMarkBloom",
          "when": "resourceExtname == .md && !activeCustomEditorId",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "MarkBloom",
      "properties": {
        "markbloom.livePreview.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MarkBloom live preview rendering."
        },
        "markbloom.livePreview.inlineRadius": {
          "type": "number",
          "default": 6,
          "description": "Inline reveal radius for MarkBloom live preview."
        },
        "markbloom.table.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable MarkBloom table editing UI."
        },
        "markbloom.view.openInMarkBloomByDefault": {
          "type": "boolean",
          "default": true,
          "description": "Open Markdown files in MarkBloom by default."
        }
      }
    }
  },
  "scripts": {
    "build": "pnpm run build:deps && pnpm run build:extension && pnpm run build:webview",
    "build:deps": "pnpm -r --filter \"@yuya296/cm6-*\" --filter \"!mark-bloom\" build",
    "build:extension": "tsc -p tsconfig.json",
    "build:webview": "vite build --config webview/vite.config.ts",
    "dev:webview": "vite --config webview/vite.config.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "package": "pnpm run build && npx @vscode/vsce package --no-dependencies",
    "publish": "pnpm run build && npx @vscode/vsce publish --no-dependencies"
  },
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.3",
    "@codemirror/view": "^6.39.8",
    "@lezer/highlight": "^1.2.3",
    "@lezer/markdown": "^1.6.2",
    "@yuya296/cm6-live-preview": "workspace:*",
    "@yuya296/cm6-table": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/vscode": "^1.90.0",
    "sass": "^1.97.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0"
  }
}
